  "components": {
    "schemas": {
        "User": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "first_name": {
                    "type": "string"
                },
                "last_name": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "is_email_verified": {
                    "type": "boolean"
                },
                "phone_number": {
                    "type": "string"
                }
            },
            "required": ["first_name", "last_name", "username", "email", "password", "is_email_verified", "phone_number"],
            "example": {
                "id": 1,
                "first_name": "John",
                "last_name": "Doe",
                "username": "johndoe",
                "email": "john@example.com",
                "password": "hashedpassword",
                "is_email_verified": false,
                "phone_number": "1234567890"
            }
        },
