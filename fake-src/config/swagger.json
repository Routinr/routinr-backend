  "paths": {
      "/auth/register": {
          "post": {
            "summary": "Register a new user",
            "requestBody": {
              "description": "User details for registration",
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "first_name": {
                        "type": "string"
                      },
                      "last_name": {
                        "type": "string"
                      },
                      "username": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string",
                        "format": "email"
                      },
                      "password": {
                        "type": "string"
                      },
                      "phone_number": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "responses": {
              "201": {
                "description": "Account created successfully",
                "content": {
                  "application/json": {
                    "example": {
                      "message": "Account created successfully! Please verify your email then go through the onboarding stages.",
                      "token": "yourAccessTokenHere",
                      "isEmailVerified": false
                    }
                  }
                }
              },
              "400": {
                "description": "Missing user data",
                "content": {
                  "application/json": {
                    "example": {
                      "error": "MISSING_USER_DATA"
                    }
                  }
                }
              },
              "409": {
                "description": "Duplicate user entry",
                "content": {
                  "application/json": {
                    "example": {
                      "error": "DUPLICATE_USER_ENTRY"
                    }
                  }
                }
              },
              "500": {
                "description": "Internal function error",
                "content": {
                  "application/json": {
                    "example": {
                      "error": "INTERNAL_FUNCTION_ERROR"
                    }
                  }
                }
              }
            }
          }
      },
      "/auth/login": {
        "post": {
          "summary": "Login with user credentials",
          "requestBody": {
            "description": "User credentials for login",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string",
                      "format": "email"
